import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";
export async function getStaticPaths() {
    const entries = await getCollection("passions");
    return entries.map((e) => ({
        params: { slug: e.id },
        props: { entry: e },
    }));
}
const { entry } = Astro.props;
